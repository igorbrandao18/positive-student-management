@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Student Management System</h1>
    <p class="lead">Complete CRUD system for student registration and management.</p>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Students</h5>
                    <h2 class="text-primary">@ViewBag.TotalStudents</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">System Status</h5>
                    <h2 class="text-success">Online</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Features</h5>
                    <h2 class="text-info">Complete</h2>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-5">
        <a href="/Students" class="btn btn-primary btn-lg me-3">Manage Students</a>
        <a href="/Students/Reports" class="btn btn-outline-primary btn-lg me-3">View Reports</a>
        
        @if (ViewBag.TotalStudents == 0)
        {
            <form method="post" action="/Home/SeedStudents" class="d-inline">
                <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('This will add 20 sample students to the database. Continue?')">
                    Add Sample Students
                </button>
            </form>
        }
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
</div>
