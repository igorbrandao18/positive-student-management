@model PositiveStudentManagement.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="students-header">
    <h2 class="students-title">Student Details</h2>
    <div class="students-actions">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary-custom">Edit Student</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger-custom">Delete Student</a>
        <a asp-action="Index" class="btn btn-secondary-custom">Back to List</a>
    </div>
</div>

<div class="student-details-container">
    @await Html.PartialAsync("Partials/_StudentCard", Model)
</div>

