@model IEnumerable<PositiveStudentManagement.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Students</h2>
    <a asp-action="Create" class="btn btn-primary">Add New Student</a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Full Name</th>
                    <th>Age</th>
                    <th>Grade</th>
                    <th>Education Level</th>
                    <th>Address Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td><span class="badge bg-primary">@student.StudentId</span></td>
                        <td>
                            <strong>@student.FullName</strong><br>
                            <small class="text-muted">@student.DateOfBirth.ToString("MMM dd, yyyy")</small>
                        </td>
                        <td><span class="badge bg-info">@student.Age years</span></td>
                        <td><span class="badge bg-secondary">@student.Grade</span></td>
                        <td>@student.EducationLevel</td>
                        <td>@student.AddressType</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-outline-primary">Details</a>
                            <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <h4>No students registered</h4>
        <p class="text-muted">Start by adding your first student to the system.</p>
        <a asp-action="Create" class="btn btn-primary">Register First Student</a>
    </div>
}
